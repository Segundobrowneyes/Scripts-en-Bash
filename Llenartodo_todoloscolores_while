program {
    uncolor := Verde
    Llenartableroun(uncolor)
 
}

procedure  Llenartableroun(color){
    while (puedeMover(Norte)){
    LlenarunaFila(color)
    Volver ()
    }
  LlenarunaFila(color)
    
}

procedure LlenarunaFila(color){
while (puedeMover(Este)){
        PonerLosCuatroColores()
        Mover (Este)
    
    }
  PonerLosCuatroColores()
}
procedure Volver(){
    IrAlBorde (Oeste)
    Mover (Norte)
    
}
procedure PonerLosCuatroColores(){
     foreach c in [minColor() .. maxColor()]{
     Poner(c)
}
}

program{
    filas := 4
    columnas := 4
    uncolor := Verde
    LlenarTablero(filas, columnas, uncolor)
}    

procedure LlenarTablero(fi, colu, color){
    repeat(fi-1){
        LlenarUnaFila(colu, color)
        Volver(colu)
    }
    
    LlenarUnaFila(colu, color)
}

procedure LlenarUnaFila(cantidad, color){
    repeat(cantidad - 1){
        Poner(color)
        Mover(Este)
    }
    Poner(color)
}

procedure Volver(c){
    repeat(c-1){
        Mover(Oeste)
    }
    Mover(Norte)
}
